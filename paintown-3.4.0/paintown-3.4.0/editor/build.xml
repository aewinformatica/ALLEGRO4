<project name="paintown editor" default="jar">

	<target name="compile">
		<mkdir dir="classes" />
		<javac srcdir="src"
		       destdir="classes"
		       target="1.5"
		       source="1.5"
		       includeAntruntime="false"
		       debug="true"
		       fork="true">
		       <classpath>
			       <!--
		       	<pathelement path="lib/ui.jar" />
			-->
		       	<pathelement path="lib/jdom.jar" />
		       </classpath>
	       </javac>
	</target>

	<target name="all">
		<antcall target="jar" />
	</target>

	<target name="jar" depends="compile">
		<unjar src="lib/jdom.jar" dest="classes" />
        <!--
		<unjar src="lib/substance.jar" dest="classes" />
        -->
		<!--
		<unjar src="lib/ui.jar" dest="classes" />
		-->
		<copy todir="classes">
			<fileset dir="resources">
				<include name="**/*.xml" />
                <include name="**/*.png" />
                <include name="**/*.gif" />
				<include name="*.txt" />
			</fileset>
		</copy>
		<jar destfile="editor.jar"
		     basedir="classes"
		     manifest="manifest" />
	</target>

	<target name="clean">
		<delete dir="classes" quiet="true" />
		<delete file="editor.jar" quiet="true" />
	</target>

</project>

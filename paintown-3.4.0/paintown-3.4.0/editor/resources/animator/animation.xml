<?xml version="1.0" encoding="UTF-8"?>
<panel layout="GridBagLayout">
    <splitpane id="split">
        <gridbagconstraints
            gridx="0"
            gridy="0"
            weightx="1"
            weighty="1"
            gridheight="1"
            anchor="GridBagConstraints.NORTHWEST"
            fill="GridBagConstraints.BOTH"
            />
        <panel id="canvas" layout="GridBagLayout">
            <gridbagconstraints
                gridx="0"
                gridy="0"
                weightx="0.7"
                weighty="1"
                gridheight="1"
                anchor="GridBagConstraints.NORTHWEST"
                fill="GridBagConstraints.BOTH"
                />
            <panel>
                <gridbagconstraints
                    gridx="0"
                    gridy="1"
                    weightx="1"
                    weighty="0"
                    gridheight="1"
                    anchor="GridBagConstraints.NORTHWEST"
                    fill="GridBagConstraints.BOTH"
                    />
                <vbox>
                    <hbox>
                        <label id="speed-num" />
                        <glue />
                    </hbox>
                    <hbox>
                        <button id="speed:decrease" icon="animator/minus.png" />
                        <slider id="speed" minimum="1" maximum="50" />
                        <button id="speed:increase" icon="animator/plus.png" />
                    </hbox>
                    <glue size="1" />
                    <hbox>
                        <label id="scale-num" />
                        <glue />
                    </hbox>
                    <hbox>
                        <button id="scale:decrease" icon="animator/minus.png" />
                        <slider id="scale" minimum="1" maximum="20" />
                        <button id="scale:increase" icon="animator/plus.png" />
                    </hbox>
                    <glue size="1" />
                    <hbox>
                        <glue size="1" />
                        <button id="play" text="Play" />
                        <glue size="1" />
                        <button id="stop" text="Stop" />
                        <glue />
                    </hbox>
                </vbox>
            </panel>
        </panel>
        <scrollpane>
            <gridbagconstraints
                gridx="1"
                gridy="0"
                weightx="0.3"
                weighty="1"
                gridheight="1"
                anchor="GridBagConstraints.NORTHWEST"
                fill="GridBagConstraints.HORIZONTAL"
                />
            <panel layout="GridBagLayout">
                <button id="hide" icon="animator/hiding-arrow/right.png">
                    <gridbagconstraints
                        gridx="0"
                        gridy="0"
                        weightx="0"
                        weighty="0"
                        gridheight="1"
                        anchor="GridBagConstraints.NORTHWEST"
                        fill="GridBagConstraints.NONE"
                        />

                </button>
                <vbox id="upper">
                    <gridbagconstraints
                        gridx="0"
                        gridy="1"
                        weightx="0"
                        weighty="1"
                        gridheight="1"
                        anchor="GridBagConstraints.NORTHWEST"
                        fill="GridBagConstraints.BOTH"
                        />

                    <hbox>
                        <label text="Name" />
                        <textfield id="name" />
                        <glue />
                    </hbox>
                    <hbox>
                        <label text="Type" />
                        <combobox id="type" />
                        <glue />
                    </hbox>
                    <glue size="1" />
                    <vbox>
                        <label text="Keys" />
                        <scrollpane>
                            <list id="keys" />
                        </scrollpane>
                        <combobox id="key-select" />
                        <hbox>
                            <button text="Add" id="add-key" />
                            <glue size="1" />
                            <button text="Remove" id="remove-key" />
                            <glue size="1" />
                            <button text="Move-Up" id="up-key" />
                            <glue size="1" />
                            <button text="Move-Down" id="down-key" />
                            <glue size="1" />
                        </hbox>
                    </vbox>
                    <glue size="1" />
                    <hbox>
                        <label text="Range" />
                        <spinner id="range" />
                        <glue />
                    </hbox>
                    <hbox>
                        <label text="Base Directory" />
                        <textfield id="basedir" />
                        <button text="Change" id="change-basedir" />
                        <button text="Clear" id="clear-basedir" />
                        <glue />
                    </hbox>
                    <hbox>
                        <label text="Previous sequence" />
                        <combobox id="sequence" />
                    </hbox>
                </vbox>
                <vbox>
                    <gridbagconstraints
                        gridx="0"
                        gridy="2"
                        weightx="1"
                        weighty="0.5"
                        gridheight="1"
                        gridwidth="2"
                        anchor="GridBagConstraints.NORTHWEST"
                        fill="GridBagConstraints.BOTH"
                        />

                    <label text="Events" />
                    <glue />
                    <scrollpane>
                        <list id="events" />
                    </scrollpane>
                    <combobox id="event-select" />
                    <hbox>
                        <button text="Add" id="add-event" />
                        <glue size="1" />
                        <button text="Edit" id="edit-event" />
                        <glue size="1" />
                        <button text="Remove" id="remove-event" />
                    </hbox>
                    <hbox>
                        <button text="Move-Up" id="up-event" />
                        <glue size="1" />
                        <button text="Move-Down" id="down-event" />
                        <glue size="1" />
                        <button text="View All" id="view-events" />
                        <glue size="1" />
                    </hbox>
                    <panel id="event-work"
                        border="MatteBorder(2,2,2,2,667A63)"
                        layout="GridBagLayout" />
                </vbox>
            </panel>
        </scrollpane>
    </splitpane>
</panel>

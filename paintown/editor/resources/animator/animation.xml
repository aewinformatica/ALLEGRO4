<panel layout="GridBagLayout">
	<vbox>
		<gridbagconstraints
			gridx="0"
			gridy="0"
			weightx="1"
			weighty="1"
			gridheight="1"
			anchor="GridBagConstraints.NORTHWEST"
			fill="GridBagConstraints.BOTH"
			/>
		<hbox>
			<label text="Name" />
			<textfield id="name" />
			<glue />
		</hbox>
		<hbox>
			<label text="Type" />
			<combobox id="type" />
			<glue />
		</hbox>
		<glue size="1" />
		<vbox>
			<label text="Keys" />
			<scrollpane>
				<list id="keys" />
			</scrollpane>
			<hbox>
				<button text="Add" id="add-key" />
				<glue size="1" />
				<button text="Remove" id="remove-key" />
				<glue size="1" />
				<button text="Move-Up" id="up-key" />
				<glue size="1" />
				<button text="Move-Down" id="down-key" />
				<glue size="1" />
			</hbox>
		</vbox>
		<glue size="1" />
		<hbox>
			<label text="Range" />
			<spinner id="range" />
			<glue />
		</hbox>
		<hbox>
			<label text="face" />
			<combobox id="face" />
			<glue />
		</hbox>
		<hbox>
			<label text="Base Directory" />
			<textfield id="basedir" />
			<button text="Change" id="change-basedir" />
			<glue />
		</hbox>
		<glue size="1" />
		<vbox>
			<label text="Events" />
			<scrollpane>
				<list id="events" />
			</scrollpane>
			<hbox>
				<button text="Add" id="add-event" />
				<glue size="1" />
				<button text="Remove" id="remove-event" />
				<glue size="1" />
				<button text="Move-Up" id="up-event" />
				<glue size="1" />
				<button text="Move-Down" id="down-event" />
				<glue size="1" />
			</hbox>
		</vbox>
		<glue size="1" />
	</vbox>
</panel>

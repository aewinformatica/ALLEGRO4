<?xml version="1.0" encoding="UTF-8"?>
<panel layout="GridBagLayout">
	<vbox>
		<panel id="canvas" border="MatteBorder(2,2,2,2,667A63)">
			<gridbagconstraints
				gridx="0"
				gridy="0"
				weightx="0.9"
				weighty="1"
				gridheight="3"
				fill="GridBagConstraints.BOTH"
				anchor="GridBagConstraints.NORTHWEST"
				/>
		</panel>
		<label id="scale-num" />
		<slider id="scale" minimum="1" maximum="20" />
	</vbox>
	<panel id="context" border="MatteBorder(2,2,2,2,667A63)">
		<gridbagconstraints
			gridx="1"
			gridy="0"
			insets="1,1,1,1"
			weightx="0.1"
			weighty="0.9"
			gridwidth="1"
			fill="GridBagConstraints.BOTH"
			anchor="GridBagConstraints.NORTH" />

		<vbox>
			<scrollpane>
				<list id="animations" />
			</scrollpane>
			<hbox>
				<button id="start" text="Play" />
				<button id="stop" text="Stop" />
				<button id="edit" text="Edit" />
			</hbox>
		</vbox>
	</panel>
</panel>

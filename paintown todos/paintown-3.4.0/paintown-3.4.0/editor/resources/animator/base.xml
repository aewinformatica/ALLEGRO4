<?xml version="1.0" encoding="UTF-8"?>
<panel layout="GridBagLayout">
	<splitpane id="split">
		<gridbagconstraints
			gridx="0"
			gridy="0"
			weightx="1"
			weighty="1"
			gridheight="1"
			fill="GridBagConstraints.BOTH"
			anchor="GridBagConstraints.NORTHWEST"
			/>

	<panel layout="GridBagLayout">
		<gridbagconstraints
			gridx="0"
			gridy="0"
			weightx="1"
			weighty="1"
			gridheight="3"
			fill="GridBagConstraints.BOTH"
			anchor="GridBagConstraints.NORTHWEST"
			/>
		<tabbedpane id="animations" border="MatteBorder(2,2,2,2,667A63)">
			<gridbagconstraints
				gridx="0"
				gridy="1"
				weightx="1"
				weighty="0.9"
				gridheight="1"
				fill="GridBagConstraints.BOTH"
				anchor="GridBagConstraints.NORTHWEST"
				/>
		</tabbedpane>

		<!--
		<tabbedpane id="animations" border="MatteBorder(2,2,2,2,667A63)" layout="GridBagLayout">
			<label text="Hello" />
		</tabbedpane>
		-->


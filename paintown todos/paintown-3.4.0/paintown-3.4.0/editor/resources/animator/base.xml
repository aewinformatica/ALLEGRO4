	</panel>
	<panel layout="GridBagLayout">
		<scrollpane layout="GridBagLayout">
			<gridbagconstraints
				gridx="1"
				gridy="0"
				insets="1,1,1,1"
				weightx="0.1"
				weighty="0.9"
				gridwidth="1"
				fill="GridBagConstraints.BOTH"
				anchor="GridBagConstraints.NORTH" />
			<vbox>
				<panel id="context" border="MatteBorder(2,2,2,2,667A63)">
					<gridbagconstraints
						gridx="0"
						gridy="0"
						insets="1,1,1,1"
						weightx="0.1"
						weighty="0.9"
						gridwidth="1"
						fill="GridBagConstraints.BOTH"
						anchor="GridBagConstraints.NORTH" />
				</panel>
				<hbox>
					<gridbagconstraints
						gridx="0"
						gridy="1"
						weightx="1"
						weighty="0.1"
						gridheight="1"
						fill="GridBagConstraints.HORIZONTAL"
						anchor="GridBagConstraints.NORTHWEST"
						/>
					<button text="Add animation" id="add-animation" />
					<glue size="1"/>
					<button text="Remove animation" id="remove-animation" />
					<glue />
				</hbox>
			</vbox>
		</scrollpane>
